// Simple Interactive Quiz App
// Week 5 Assignment by Jenifer

// Declare variables
let score = 0; // number data type
const totalQuestions = 5; // constant
let playAgain = true; // boolean data type

// Store questions and answers in an array of objects
const questions = [
  {
    prompt: "1. Which keyword is used to declare a variable in JavaScript?",
    answer: "let"
  },
  {
    prompt: "2. What symbol is used for single-line comments in JavaScript?",
    answer: "//"
  },
  {
    prompt: "3. Which method is used to convert a string to lowercase?",
    answer: "tolowercase"
  },
  {
    prompt: "4. What data type is true or false?",
    answer: "boolean"
  },
  {
    prompt: "5. Which loop is used to repeat a block of code while a condition is true?",
    answer: "while"
  }
];

// Use do-while loop to allow replay
do {
  score = 0; // reset score for replay
  console.log("🧩 Welcome to the JavaScript Quiz!");
  console.log("----------------------------------");

  // Loop through each question
  for (let i = 0; i < questions.length; i++) {
    // Simulated input (replace with prompt() in browser)
    let userAnswer = prompt(questions[i].prompt); // <-- use this in browser
    // let userAnswer = "let"; // for testing without prompt()

    // Handle capitalization
    if (userAnswer.toLowerCase() === questions[i].answer.toLowerCase()) {
      console.log("✅ Correct!");
      score++;
    } else {
      console.log(`❌ Incorrect. The correct answer is ${questions[i].answer}.`);
    }
  }

  // Final score output
  console.log("----------------------------------");
  console.log(`🎯 Quiz Completed! Your score: ${score}/${questions.length}`);

  // Ask if user wants to play again
  let replay = prompt("Do you want to play again? (yes/no)");
  if (replay.toLowerCase() !== "yes") {
    playAgain = false;
    console.log("👋 Thanks for playing!");
  }
} while (playAgain);
